<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_actionbar</item>
        <item name="popupMenuStyle">@style/PopupMenu.Actionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Actionbar</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Actionbar</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Actionbar</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Actionbar</item>
        <item name="actionModeBackground">@drawable/cab_background_top_actionbar</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_actionbar</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Actionbar</item>
    </style>
    
    
    <!-- 
    	Application theme.
    -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->        
    </style>

    <!--
        ActionBar Theme
    -->
    <style name="ActionBar.Solid.Actionbar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_actionbar</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_actionbar</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_actionbar</item>
        <item name="progressBarStyle">@style/ProgressBar.Actionbar</item>
    </style>

    <style name="ActionBar.Transparent.Actionbar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_actionbar</item>
        <item name="progressBarStyle">@style/ProgressBar.Actionbar</item>
    </style>
	
    <style name="PopupMenu.Actionbar" parent="@style/Widget.AppCompat.Light.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_actionbar</item>	
    </style>
	
    <style name="DropDownListView.Actionbar" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_actionbar</item>
    </style>

    <style name="ActionBarTabStyle.Actionbar" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_actionbar</item>
    </style>
	
    <style name="DropDownNav.Actionbar" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_actionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_actionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_actionbar</item>
    </style>
    
    <style name="ProgressBar.Actionbar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_actionbar</item>
    </style>
    
    <style name="ActionButton.CloseMode.Actionbar" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_actionbar</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Actionbar.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Actionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Actionbar</item>
    </style>
    

    <!--
        Layout styles
    -->
    
    <style name="Layout_task_list_item">
	    <item name="android:background">@drawable/activated_background_indicator_task_list_item</item>
	    <item name="android:padding">10dp</item>
    </style>
    
    <style name="Layout_lateral_fragment">
	    <item name="android:background">@color/background_lateral_fragment</item>
	    <item name="android:padding">10dp</item>
    </style>
    
    <style name="Layout_content_fragment">
	    <item name="android:background">@color/background_content_fragment</item>
	    <item name="android:padding">10dp</item>
    </style>
    
    
    <!--
        Text styles
    -->
    
	<style name="Text_activity_login_unofficial" parent="@android:style/TextAppearance.Large">
	    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
	    <item name="android:textColor">@color/text_activity_login_unofficial</item>
	    <item name="android:textStyle">normal</item>
	    <item name="android:textSize">24sp</item>
    </style>

	<style name="Text_fragment_task_list_name" parent="@android:style/TextAppearance.Large">
	    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
	    <item name="android:textColor">@color/text_fragment_task_list_primary</item>
	    <item name="android:textSize">14sp</item>
	    <item name="android:textStyle">normal</item>
    </style>

	<style name="Text_fragment_task_list_comments_count" parent="@android:style/TextAppearance.Small">
	    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	    <item name="android:textColor">@color/text_fragment_task_list_primary</item>
	    <item name="android:textSize">10sp</item>
	    <item name="android:textStyle">normal</item>
    </style>
	
	<style name="Text_fragment_task_list_comments_count_title" parent="@style/Text_fragment_task_list_comments_count">
		<item name="android:layout_marginLeft">5dp</item>
	</style>
	
	<style name="Text_fragment_project_list_status_title" parent="@android:style/TextAppearance.Small">
	    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	    <item name="android:textColor">@color/text_fragment_task_list_primary</item>
	    <item name="android:textSize">11sp</item>
	    <item name="android:textStyle">normal</item>
	    <item name="android:gravity">center_horizontal</item>
    </style>

	<style name="Text_fragment_project_list_name" parent="@android:style/TextAppearance.Medium">
	    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:textColor">@color/text_fragment_task_list_primary</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:textStyle">normal</item>
    </style>

	<style name="Text_fragment_lateral_title" parent="@android:style/TextAppearance.Medium">
	    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:textColor">@color/text_fragment_lateral_title</item>
	    <item name="android:textStyle">normal</item>
    </style>
	
	<style name="Text_fragment_content_title" parent="@android:style/TextAppearance.Medium">
	    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:textColor">@color/text_fragment_content_title</item>
	    <item name="android:textStyle">normal</item>
    </style>
				
			
    <!--
        Button styles
    -->
    
    <style name="Button.Base" parent="@android:style/Widget.Holo.Light.Button">
	</style>
    
	<style name="Button_login" parent="@style/Button.Base">
	    <item name="android:textSize">24sp</item>
	    <item name="android:paddingRight">50dp</item>
	    <item name="android:paddingLeft">50dp</item>
	</style>
	
	<style name="Button_logout" parent="@style/Button.Base">
	</style>

	<style name="Button_tasks_counter_new" parent="@android:style/Widget.Holo.Light.Button.Small">
	    <item name="android:textSize">16sp</item>
	</style>

	<style name="Button_tasks_counter_other" parent="@android:style/Widget.Holo.Light.Button.Small">
	    <item name="android:textSize">14sp</item>
	</style>
			
    
</resources>
