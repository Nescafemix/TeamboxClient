<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    style="@style/Layout_task_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="6"
    android:rowCount="4"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewProjectName"
        style="@style/Text_fragment_project_list_name"
        android:layout_columnSpan="6"
        android:layout_rowSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="10dp"
        android:text="@null" />

	<Space
    	android:layout_columnSpan="1"
    	android:layout_rowSpan="2"
        android:layout_gravity="fill_horizontal"/>
    
	<TextView
        android:id="@+id/textViewTasksCountRejectedTitle"
        style="@style/Text_fragment_project_list_status_title"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:text="Rejected" />
 	
    <TextView
        android:id="@+id/textViewTasksCountResolvedTitle"
        style="@style/Text_fragment_project_list_status_title"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:text="Resolved" />
    	


    <TextView
        android:id="@+id/textViewTasksCountHoldTitle"
        style="@style/Text_fragment_project_list_status_title"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:text="Hold" />
    
    <TextView
        android:id="@+id/textViewTasksCountOpenTitle"
        style="@style/Text_fragment_project_list_status_title"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:text="Open" />
    
    
	<TextView
        android:id="@+id/textViewTasksCountNewTitle"
        style="@style/Text_fragment_project_list_status_title"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:text="New" />

    <Button
        android:id="@+id/buttonTasksCountRejected"
        style="@style/Button_tasks_counter_other"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginLeft="5dp"
        android:text="@null" />
    
    <Button
        android:id="@+id/buttonTasksCountResolved"
        style="@style/Button_tasks_counter_other"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginLeft="5dp"
        android:text="@null" />
    
    <Button
        android:id="@+id/buttonTasksCountHold"
        style="@style/Button_tasks_counter_other"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginLeft="5dp"
        android:text="@null" />
    
    <Button
        android:id="@+id/buttonTasksCountOpen"
        style="@style/Button_tasks_counter_other"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginLeft="5dp"
        android:text="@null" />
        
    <Button
        android:id="@+id/buttonTasksCountNew"
        style="@style/Button_tasks_counter_new"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginLeft="5dp"
        android:text="@null" />

</GridLayout>