<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    style="@style/Layout_task_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textViewProjectName"
        style="@style/Text_fragment_project_list_name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:text="@null" />

    <TextView
        android:id="@+id/TextViewTasksCounterUrgent"
        style="@style/Text_fragment_project_list_task_urgent_counter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:background="@drawable/background_task_urgent_counter"
        android:gravity="center"
        android:text="@null" />

    <TextView
        android:id="@+id/TextViewTasksCounterNormal"
        style="@style/Text_fragment_project_list_task_normal_counter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:background="@drawable/background_task_normal_counter"
        android:gravity="center"
        android:text="@null" />

</LinearLayout>